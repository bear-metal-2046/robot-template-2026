{
  "name": "Bear Metal Robotics Development",

  "image": "mcr.microsoft.com/devcontainers/base:noble",

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/node:1":  { "version": "lts" },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21.0.8",
      "jdkDistro": "tem"
    },
    "ghcr.io/devcontainers-extra/features/gradle-sdkman:2": {},
    "ghcr.io/devcontainers-extra/features/maven-sdkman:2": {}
  },

  "forwardPorts": [6080, 7777, 5810, 5811, 1740, 3300, 8080],
  "portsAttributes": {
    "6080": { "label": "desktop" },
    "7777": { "label": "auth callback" },
    "5810": { "label": "NetworkTables 4 Server" },
    "5811": { "label": "NetworkTables 4 Client" },
    "1740": { "label": "RIOlog" },
    "3300": { "label": "HALSim WebSocket" },
    "8080": { "label": "HALSim Web UI" }
  },


  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-maven",
        "vscjava.vscode-gradle",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  }
}
